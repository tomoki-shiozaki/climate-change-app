# Pull base image
FROM python:3.13-slim-trixie

# Set environment variables
ENV PIP_DISABLE_PIP_VERSION_CHECK=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set work directory
WORKDIR /app

# PostgreSQL ã‚¯ãƒ©ã‚¤ã‚¢ãƒ³ãƒˆã‚’ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«ï¼ˆpg_isreadyãŒå«ã¾ã‚Œã‚‹ï¼‰
RUN apt-get update \
 && apt-get install -y --no-install-recommends postgresql-client \
 && rm -rf /var/lib/apt/lists/*

# Copy only requirements to leverage Docker caching
COPY requirements/dev.txt requirements/dev.txt

# Install dependencies
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements/dev.txt

# Copy project
COPY . .

# Copy entrypoint.sh to a fixed location
RUN chmod +x /app/entrypoint.sh

# ğŸ‘‡ érootãƒ¦ãƒ¼ã‚¶ãƒ¼ã‚’ä½œæˆã—ã¦åˆ‡ã‚Šæ›¿ãˆã‚‹
RUN useradd -m vscode && chown -R vscode:vscode /app
USER vscode